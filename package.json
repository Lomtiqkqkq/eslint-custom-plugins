{
  "name": "eslint-plugins",
  "version": "1.5.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^8.2.1",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "bootstrap": "lerna link",
    "version": "standard-version",
    "changelog": "standard-version --dry-run --skip.tag=true --skip.commit=true",
    "publish": "lerna publish from-package --yes",
    "release": "git add . && git commit -m \"feat: обновление плагинов\" && npx lerna version && git push --follow-tags && npx lerna publish from-package --yes\n"
  },
  "standard-version": {
    "skip": {
      "tag": false
    },
    "types": [
      {
        "type": "feat",
        "section": "✨ Features"
      },
      {
        "type": "fix",
        "section": "🐞 Bug Fixes"
      },
      {
        "type": "chore",
        "section": "🧹 Chores",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "📝 Documentation",
        "hidden": true
      },
      {
        "type": "style",
        "section": "💄 Code Style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "🔧 Refactoring",
        "hidden": true
      },
      {
        "type": "test",
        "section": "✅ Tests",
        "hidden": true
      }
    ]
  }
}
