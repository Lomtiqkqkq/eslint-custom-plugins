{
  "name": "eslint-plugins",
  "version": "1.10.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "lerna": "^8.2.1",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "bootstrap": "lerna link",
    "version": "standard-version",
    "changelog": "standard-version --dry-run --skip.tag=true --skip.commit=true",
    "publish": "lerna publish from-git --yes",
    "release": "git add . && npx lerna version patch --conventional-commits --yes --message \"chore(release): publish\"  && git push --follow-tags origin master && npx lerna publish from-package --yes"
  },
  "standard-version": {
    "skip": {
      "tag": false
    },
    "types": [
      {
        "type": "feat",
        "section": "✨ Features"
      },
      {
        "type": "fix",
        "section": "🐞 Bug Fixes"
      },
      {
        "type": "chore",
        "section": "🧹 Chores",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "📝 Documentation",
        "hidden": true
      },
      {
        "type": "style",
        "section": "💄 Code Style",
        "hidden": true
      },
      {
        "type": "refactor",
        "section": "🔧 Refactoring",
        "hidden": true
      },
      {
        "type": "test",
        "section": "✅ Tests",
        "hidden": true
      }
    ]
  }
}
